
<div class="body">
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, size:'100x100', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
          <%= link_to edit_user, class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <label for="book_title">Title</label>
      <div class="field row"><%= f.text_field :title, class:"col-xs-12 book_title" %></div>
      <label for="book_opinion">Opinion</label>
      <div class="field row"><%= f.text_area :opinion, class:"col-xs-12 book_body" %></div>
      <div class="action row"><%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %></div>
      <% end %>
    </div>

  <div class="col-xs-9">
    <h2>Book detail</h2>

      <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, size:'45x45', format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.opinion %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book, class="btn-sm btn-success edit_book_id" %>
              </td>
              <td>
                <%= link_to "Destroy" books_path, class="btn-sm btn-danger destroy_book_id", method: :delete, "date-confirm" => "本当に消しますか？" %>
                <% end %>
              </td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
</div>
