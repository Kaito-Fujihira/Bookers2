<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="body">
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, size:'100x100', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.png" %>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
          <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_25028" href="/users/25028/edit">
          </a>
          
      <h1>New book</h1>
      <div class="index-btn">
        <%= form_with model:@book, local:true do |f| %>
      <div>Title</div>
      <div class="field"><%= f.text_field :title %></div>
      <div>Opinion</div>
      <div class="field"><%= f.text_area :opinion%></div>
      <div class="action"><%= f.submit 'Create Book' %></div>
      </div>
      <% end %>
    </div>

  <div class="col-xs-9">
    <h1>Books</h1>

      <table class="table table-striped">
        <thead>
          <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
          <tr>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
