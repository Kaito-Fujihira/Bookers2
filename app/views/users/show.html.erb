
<%= render "layouts/list", user: @user, book: @book %>

  <div class="col-xs-9">
    <h2>Books</h2>

      <table class="table table-striped">
        <thead>
          <tr>
          <th width=150px></th>
          <th width=495px>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <% @user.books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, size:'50x50', format: 'jpeg', class: "attachment user profile_image fallback", fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
