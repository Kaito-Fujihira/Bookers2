
<div class="body">
<div class="container">
 
  <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
      
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= attachment_image_tag @user, :profile_image, size:'90x90', format: 'jpeg', class: "attachment user profile_image fallback", fallback: "no_image.jpg" %>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
          <div class="row">
          <% if @user.id == current_user.id %>
          <%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_id" %>
          <% end %>
          </div>

      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <label for="book_title">Title</label>
      <div class="field row"><%= f.text_field :title, class: "col-xs-12 book_title" %></div>
      <label for="book_opinion">Opinion</label>
      <div class="field row"><%= f.text_area :opinion, class: "col-xs-12 book_body" %></div>
      <div class="action row"><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %></div>
      <% end %>
    </div>

  <div class="col-xs-9">
    <h2>Books</h2>

      <table class="table table-striped">
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          </tr>
          </thead>
          <tbody>
            <% if @book.user == current_user %>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(current_user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, size:'50x50', format: 'jpeg', class: "attachment user profile_image fallback", fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(current_user.id) do %>
                <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.opinion %>
              </td>
            </tr>
            <% end %>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
