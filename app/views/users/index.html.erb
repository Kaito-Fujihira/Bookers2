
<%= render "layouts/list", user: @user, book: @book, isRoom: @isRoom, roomId: @roomId, entry: @entry, room: @room %>

  <div class="col-xs-9">
    <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
          <th width=250px>image</th>
          <th width=400px>name</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <tr>
              <% @users.each do |user| %>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 60, 60, size:'50x50', format: 'jpeg', class: "attachment user profile_image fallback", fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user.id), class: "user_id" %>
              </td>
            </tr>
                <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
</div>
